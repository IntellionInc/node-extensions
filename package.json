{
	"name": "@intellion/extensions",
	"version": "1.1.1",
	"description": "",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"build": "tsc",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:dev": "jest --watch",
		"test:cov": "jest --coverage",
		"test: ci": "jest --maxWorkers=2",
		"test:cov:ci": "jest --coverage --maxWorkers=2",
		"prepare": "husky install && npx husky-init",
		"pre-commit": "npm run build && npm test && lint-staged"
	},
	"lint-staged": {
		"*.+(js|ts)": [
			"npm run lint",
			"git add"
		],
		"*.+(json|css|md)": [
			"prettier --write",
			"git add"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Trade-Automation-System/node-extensions.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Trade-Automation-System/node-extensions/issues"
	},
	"homepage": "https://github.com/Trade-Automation-System/node-extensions#readme",
	"dependencies": {
		"esm": "^3.2.25"
	},
	"engines": {
		"node": ">=14.0.0",
		"npm": ">=6.14.12"
	},
	"directories": {
		"test": "test"
	},
	"devDependencies": {
		"@types/expect": "^24.3.0",
		"@types/jest": "^26.0.24",
		"@types/node": "^16.3.2",
		"@typescript-eslint/eslint-plugin": "^4.28.5",
		"@typescript-eslint/parser": "^4.28.5",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^7.0.0",
		"jest": "^27.0.6",
		"lint-staged": "^11.1.1",
		"prettier": "^2.3.2",
		"ts-jest": "^27.0.3",
		"ts-node": "^10.1.0",
		"tslib": "^2.3.0",
		"typescript": "^4.3.5"
	}
}
