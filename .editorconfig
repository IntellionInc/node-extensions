# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = crlf
insert_final_newline = true

# Set default charset
[*.{ts,js}]
charset = utf-8

# 2 tab indentation
[*.{ts, js}]
indent_style = tab
indent_size = 2

# Matches the exact file
[{package.json,.travis.yml}]
indent_style = tab
indent_size = 2
